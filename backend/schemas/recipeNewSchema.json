{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/recipeNew.schema.json",
  "type": "object",
  "properties": {
    "label": {
      "type": "string"
    },
    "url": {
      "type": ["string", "null"]
    },
    "ingredients": {
      "type": "string"
    },
    "instructions": {
      "type": "string"
    },
    "api_uri": {
      "type": ["string", "null"],
      "format": "uri"
    },
    "username": {
      "type": "string"
    },
    "image": {
      "type": ["string", "null"]
    }
  },
  "additionalProperties": false,
  "required": [
    "label",
    "ingredients",
    "username"
  ]
}
